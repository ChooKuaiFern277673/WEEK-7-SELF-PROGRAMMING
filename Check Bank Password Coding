package repetitionAndSeleection;

import java.util.Scanner;

public class checkBankPassword {

	public static void main(String[] args) {
		        // TODO Auto-generated method stub
		
				Scanner sc = new Scanner (System.in) ;
		
				for(int f=2;f>=0;f--) {
				System.out.print("Enter your account password: ");
			    int e = sc.nextInt();
			    int pass = 22226666;
			    if(e==pass) {
			    System.out.println("Your password is correct.");
			    break;
			    }else
			    System.out.print("Your password is wrong! You have "+f+" chance. Please enter again: ");
			    System.out.println();
			    if(f==0) {
			    System.out.print("Sorry, you need to wait 5 minutes to key in your passwork again!");
			   
			 }
			  }
			
		
		}
	}
